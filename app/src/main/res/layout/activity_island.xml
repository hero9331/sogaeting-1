<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/component2">

    <TextView
        android:id="@+id/tvIslandTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무인도(감옥)"
        android:textSize="80sp"
        android:textStyle="bold"
        android:fontFamily="@font/maplestory_bold"
        android:textColor="#ff211b"
        app:layout_constraintBottom_toTopOf="@+id/tvIslandDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvIslandDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번 턴은 무인도 입니다.\n한 턴 쉬어가세요."
        android:textSize="40sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/maplestory_bold"
        app:layout_constraintTop_toBottomOf="@+id/tvIslandTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirm" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="확인"
        android:textColor="#ff211b"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/maplestory_bold"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:background="@drawable/bg_white_round"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
