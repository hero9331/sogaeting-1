<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/component2">

    <!-- 게임 제목 -->
    <TextView
        android:id="@+id/tvGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임 제목"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ff211b"
        android:fontFamily="@font/maplestory_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvIng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- 진행바 (데모 느낌) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:indeterminateTint="#ff211b"
        app:layout_constraintTop_toBottomOf="@+id/tvGameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임 진행 중..."
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maplestory_bold"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEndGame" />

    <!-- 게임 종료 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEndGame"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="게임 종료"
        android:textColor="#ff211b"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_white_round"
        android:fontFamily="@font/maplestory_bold"
        android:gravity="center"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvIng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
